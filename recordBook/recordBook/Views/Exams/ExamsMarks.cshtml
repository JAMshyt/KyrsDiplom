	{
		ViewData["Title"] = "Ваши оценки, " + User.FindFirst(ClaimTypes.Surname)?.Value + " " + User.FindFirst(ClaimTypes.Name)?.Value;
	}
	else if (User.IsInRole("Adm"))
	{
		ViewData["Title"] = "Оценки группы " + Model.selectedGroup.Name_group;
	}
	else
	{
		ViewData["Title"] = "Оценки вашей группы (" + Model.selectedGroup.Name_group+")";
	}
}

